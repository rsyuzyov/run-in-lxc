# ZooKeeper Configuration
# Пример для standalone ZooKeeper
# Документация: https://zookeeper.apache.org/doc/current/zookeeperAdmin.html

#############################################
# Basic Configuration
#############################################

# Директория данных
dataDir=/var/lib/zookeeper

# Порт клиентских подключений
clientPort=2181

# Максимум клиентских подключений (0 = без лимита)
maxClientCnxns=100

#############################################
# Timing
#############################################

# Базовая единица времени (миллисекунды)
tickTime=2000

# Лимит тиков на начальную синхронизацию
initLimit=10

# Лимит тиков между heartbeats
syncLimit=5

#############################################
# Admin Server
#############################################

# Отключить admin server (или указать порт)
admin.enableServer=false
# admin.serverPort=8080

#############################################
# Autopurge
#############################################

# Количество сохраняемых снапшотов
autopurge.snapRetainCount=3

# Интервал очистки (часы, 0 = отключено)
autopurge.purgeInterval=1

#############################################
# Cluster Configuration (для кластера)
#############################################

# Для кластера ZooKeeper добавьте все ноды:
# server.1=zk1:2888:3888
# server.2=zk2:2888:3888
# server.3=zk3:2888:3888
#
# И создайте файл myid в dataDir с номером ноды:
# echo "1" > /var/lib/zookeeper/myid

