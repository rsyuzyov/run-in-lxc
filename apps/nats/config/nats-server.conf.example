# NATS Server Configuration
# Базовая конфигурация

# Имя сервера
server_name: nats-server

# Сетевые настройки
port: 4222
http_port: 8222

# Логирование
log_file: /var/log/nats/nats-server.log
logtime: true
debug: false
trace: false

# Лимиты
max_connections: 65536
max_payload: 1MB
max_pending: 64MB

# Ping/Pong для проверки соединений
ping_interval: "2m"
ping_max: 2

# Таймауты записи
write_deadline: "10s"

